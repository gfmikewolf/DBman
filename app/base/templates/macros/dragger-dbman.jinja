{# app/base/templates/macros/dragger-dbman.jinja #}
{%- macro DraggerDBMan(
  name='',
  id='dbman-dragger-' + name if name else none,
  type='card',
  title=_('Drag Container'),
  headers=[]
) -%}
{%- if type == 'card' -%}
<div class="card">
  <div class="card-header">{{- _('_table_header') -}}</div>
  <div class="card-body">
{%- endif %}
  <div class="list-group" {{ 'id=' + id if id else '' }}>
    {%- for header in headers %}
    <li class="list-group-item list-group-item-action 
      d-flex justify-content-between align-items-center 
      draggableList"
      data-dbman-sn="{{ loop.index }}">
      <div>
        <input class="form-check-input" 
                  type="checkbox" 
                  name="{{ header }}"
                  id="cbox-{{ header }}" 
                  checked>
        <label class="form-check-label streched-link" for="cbox-{{ header }}">
          {{- header -}}
        </label>
      </div>
      <span class="handle draggable"><i class="fa fa-bars"></i></span>
    </li>
    {%- endfor %}
  </div>
{%- if type == 'card' %}
  </div>
</div>
{%- endif -%}
{%- endmacro -%}
